<%= form_with model: [@room, @message], class: 'bottom-main-area', local: true do |f| %>
  <div class="input-message">
    <%= f.text_field :content, class: 'message-box', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>